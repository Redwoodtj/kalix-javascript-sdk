{
  "name": "js-customer-registry",
  "version": "0.1.0",
  "description": "Sample Akka Serverless application that demonstrates views",
  "keywords": [
    "serverless",
    "akka serverless",
    "event sourced entities",
    "value entities"
  ],
  "engineStrict": true,
  "engines": {
    "node": "~12"
  },
  "homepage": "https://github.com/lightbend/akkaserverless-javascript-sdk",
  "bugs": {
    "url": "https://github.com/lightbend/akkaserverless-javascript-sdk/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Akka Serverless Team",
    "email": "info@lightbend.com",
    "url": "https://lightbend.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lightbend/akkaserverless-javascript-sdk",
    "directory": "samples/shopping-cart"
  },
  "//": "https://npm.community/t/npm-install-does-not-install-transitive-dependencies-of-local-dependency/2264",
  "dependencies": {
    "@grpc/proto-loader": "^0.1.0",
    "@lightbend/akkaserverless-javascript-sdk": "file:../../javascript-sdk",
    "google-protobuf": "^3.11.4",
    "grpc": "^1.24.2"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "mocha": "^6.2.3"
  },
  "scripts": {
    "test": "mocha",
    "prepare-javascript-sdk": "cd ../../javascript-sdk && npm install && cd ../samples/js-customer-registry",
    "prestart": "compile-descriptor -I./proto customer_api.proto customer_domain.proto customer_view.proto",
    "pretest": "compile-descriptor -I./proto customer_api.proto customer_domain.proto customer_view.proto",
    "postinstall": "compile-descriptor -I./proto customer_api.proto customer_domain.proto customer_view.proto",
    "start": "node index.js",
    "start-no-prestart": "node index.js",
    "dockerbuild": "npm run prepare-javascript-sdk && docker build -f Dockerfile -t ${DOCKER_PUBLISH_TO:-akkaserverless}/js-customer-registry:latest ../..",
    "dockerpush": "docker push ${DOCKER_PUBLISH_TO:-akkaserverless}/js-customer-registry:latest",
    "dockerbuildpush": "npm run dockerbuild && npm run dockerpush"
  }
}
